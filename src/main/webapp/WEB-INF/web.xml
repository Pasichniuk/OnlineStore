<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <description>Session Listener</description>
        <listener-class>util.MySessionListener</listener-class>
    </listener>

    <listener>
        <description>Session Attribute Listener</description>
        <listener-class>util.MySessionAttributeListener</listener-class>
    </listener>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/view/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/view/error.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/view/error.jsp</location>
    </error-page>

</web-app>